<% if @home_results && @match_results %>
  <div data-controller="compare">
    <!-- Compare Button Bar -->
    <div class="mb-6 p-4 bg-gradient-to-r from-teal-500/10 to-amber-500/10 border border-teal-500/20 rounded-2xl flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3">
      <p class="text-gray-300 text-sm sm:text-base">
        üí° <strong>Tip:</strong> Click "Select" on places below, then compare side-by-side!
      </p>
      <button type="button" data-action="click->compare#open" class="w-full sm:w-auto px-5 py-2.5 bg-gradient-to-r from-teal-500 to-amber-500 rounded-xl font-semibold text-slate-900 hover:opacity-90 transition-opacity cursor-pointer text-center">
        ‚öñÔ∏è Compare Selected
      </button>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8">
      <!-- Home City Results -->
      <div>
        <h2 class="text-xl sm:text-2xl font-bold mb-4 sm:mb-6 flex items-center gap-2">
          <span class="w-10 h-10 bg-teal-500/20 rounded-xl flex items-center justify-center flex-shrink-0">üè†</span>
          <span class="truncate">Places in <%= @home_city %></span>
        </h2>

        <% if @home_results[:success] && @home_results[:results].any? %>
          <div class="space-y-4">
            <% @home_results[:results].first(5).each_with_index do |place, index| %>
              <div id="home_place_<%= index %>" class="group p-4 sm:p-5 bg-slate-900/50 border border-white/10 rounded-2xl hover:border-teal-500/30 transition-all">
                <div class="flex gap-3 sm:gap-4">
                  <% if place[:image_url].present? %>
                    <img src="<%= place[:image_url] %>" alt="<%= place[:name] %>" class="w-20 h-20 sm:w-24 sm:h-24 rounded-xl object-cover flex-shrink-0">
                  <% else %>
                    <div class="w-20 h-20 sm:w-24 sm:h-24 rounded-xl bg-gradient-to-br from-teal-500/20 to-amber-500/20 flex items-center justify-center flex-shrink-0">
                      <span class="text-2xl">üìç</span>
                    </div>
                  <% end %>

                  <div class="flex-1 min-w-0">
                    <h3 class="font-semibold text-base sm:text-lg truncate"><%= place[:name] %></h3>
                    <p class="text-sm text-gray-400 truncate"><%= place[:address] %></p>

                    <div class="flex items-center gap-2 sm:gap-3 mt-2 text-sm flex-wrap">
                      <% if place[:rating] %>
                        <span class="inline-flex items-center gap-1 px-2 py-0.5 bg-yellow-500/10 text-yellow-400 text-xs rounded-md">‚òÖ <%= place[:rating] %></span>
                      <% end %>
                      <% if place[:price] %>
                        <span class="text-teal-400 text-xs"><%= place[:price] %></span>
                      <% end %>
                      <% if place[:reviews_count] %>
                        <span class="text-gray-500 text-xs"><%= place[:reviews_count] %> reviews</span>
                      <% end %>
                    </div>
                  </div>
                </div>

                <div class="flex flex-wrap items-center gap-2 mt-3 pt-3 border-t border-white/5">
                  <button type="button"
                          data-action="click->compare#selectHome"
                          data-place='<%= place.to_json %>'
                          data-index="<%= index %>"
                          class="select-home-btn px-4 py-2.5 text-sm bg-teal-500/20 border border-teal-500/30 text-teal-400 rounded-xl hover:bg-teal-500/30 transition-colors cursor-pointer">
                    ‚úì Select
                  </button>
                  <% if place[:url] %>
                    <%= link_to "View on Yelp", place[:url], target: "_blank", class: "px-4 py-2.5 text-sm bg-white/5 rounded-xl hover:bg-white/10 transition-colors" %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="p-8 bg-slate-900/50 border border-white/10 rounded-2xl text-center">
            <p class="text-gray-400">No places found. Try a different search.</p>
            <% if @home_results[:error] %>
              <p class="text-red-400 text-sm mt-2"><%= @home_results[:error] %></p>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- New City Matches -->
      <div>
        <h2 class="text-xl sm:text-2xl font-bold mb-4 sm:mb-6 flex items-center gap-2">
          <span class="w-10 h-10 bg-amber-500/20 rounded-xl flex items-center justify-center flex-shrink-0">‚ú®</span>
          <span class="truncate">Matches in <%= @new_city %></span>
        </h2>

        <% if @match_results[:success] && @match_results[:results].any? %>
          <div class="space-y-4">
            <% @match_results[:results].first(5).each_with_index do |place, index| %>
              <div id="match_place_<%= index %>" class="group p-4 sm:p-5 bg-slate-900/50 border border-white/10 rounded-2xl hover:border-amber-500/30 transition-all">
                <div class="flex gap-3 sm:gap-4">
                  <% if place[:image_url].present? %>
                    <img src="<%= place[:image_url] %>" alt="<%= place[:name] %>" class="w-20 h-20 sm:w-24 sm:h-24 rounded-xl object-cover flex-shrink-0">
                  <% else %>
                    <div class="w-20 h-20 sm:w-24 sm:h-24 rounded-xl bg-gradient-to-br from-teal-500/20 to-amber-500/20 flex items-center justify-center flex-shrink-0">
                      <span class="text-2xl">üìç</span>
                    </div>
                  <% end %>

                  <div class="flex-1 min-w-0">
                    <h3 class="font-semibold text-base sm:text-lg truncate"><%= place[:name] %></h3>
                    <p class="text-sm text-gray-400 truncate"><%= place[:address] %></p>

                    <div class="flex items-center gap-2 sm:gap-3 mt-2 text-sm flex-wrap">
                      <% if place[:rating] %>
                        <span class="inline-flex items-center gap-1 px-2 py-0.5 bg-yellow-500/10 text-yellow-400 text-xs rounded-md">‚òÖ <%= place[:rating] %></span>
                      <% end %>
                      <% if place[:price] %>
                        <span class="text-teal-400 text-xs"><%= place[:price] %></span>
                      <% end %>
                      <% if place[:reviews_count] %>
                        <span class="text-gray-500 text-xs"><%= place[:reviews_count] %> reviews</span>
                      <% end %>
                    </div>
                  </div>
                </div>

                <div class="flex flex-wrap items-center gap-2 mt-3 pt-3 border-t border-white/5">
                  <button type="button"
                          data-action="click->compare#selectMatch"
                          data-place='<%= place.to_json %>'
                          data-index="<%= index %>"
                          class="select-match-btn px-4 py-2.5 text-sm bg-amber-500/20 border border-amber-500/30 text-amber-400 rounded-xl hover:bg-amber-500/30 transition-colors cursor-pointer">
                    ‚úì Select
                  </button>
                  <% if place[:url] %>
                    <%= link_to "View on Yelp", place[:url], target: "_blank", class: "px-4 py-2.5 text-sm bg-white/5 rounded-xl hover:bg-white/10 transition-colors" %>
                  <% end %>

                  <!-- Save Match Form -->
                  <turbo-frame id="save_button_<%= place[:yelp_id] %>">
                    <%= form_with url: save_match_place_path(id: 0), method: :post, data: { controller: "loading", action: "submit->loading#submit", loading_text_value: "Saving..." } do |f| %>
                      <input type="hidden" name="place[yelp_id]" value="<%= place[:yelp_id] %>">
                      <input type="hidden" name="place[name]" value="<%= place[:name] %>">
                      <input type="hidden" name="place[address]" value="<%= place[:address] %>">
                      <input type="hidden" name="place[city]" value="<%= place[:city] %>">
                      <input type="hidden" name="place[image_url]" value="<%= place[:image_url] %>">
                      <input type="hidden" name="place[rating]" value="<%= place[:rating] %>">
                      <input type="hidden" name="place[price]" value="<%= place[:price] %>">
                      <input type="hidden" name="place[phone]" value="<%= place[:phone] %>">
                      <input type="hidden" name="place[url]" value="<%= place[:url] %>">
                      <input type="hidden" name="place[yelp_reviews_count]" value="<%= place[:reviews_count] %>">
                      <input type="hidden" name="place[category_id]" value="<%= selected_category&.id %>">

                      <button type="submit" data-loading-target="button" class="inline-flex items-center gap-2 px-4 py-2.5 text-sm bg-gradient-to-r from-teal-500 to-amber-500 text-slate-900 font-medium rounded-xl hover:opacity-90 transition-opacity">
                        <span data-loading-target="text">üíæ Save Match</span>
                        <svg data-loading-target="spinner" class="animate-spin hidden" style="width: 14px; height: 14px;" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                          <circle style="opacity: 0.25;" cx="12" cy="12" r="10" stroke="#0f172a" stroke-width="4"></circle>
                          <path style="opacity: 0.75;" fill="#0f172a" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                      </button>
                    <% end %>
                  </turbo-frame>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="p-8 bg-slate-900/50 border border-white/10 rounded-2xl text-center">
            <p class="text-gray-400">No matches found. Try a different category.</p>
            <% if @match_results[:error] %>
              <p class="text-red-400 text-sm mt-2"><%= @match_results[:error] %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Compare Modal (full-screen on mobile) -->
    <div data-compare-target="modal"
         class="fixed inset-0 z-50 hidden items-center justify-center bg-black/70 backdrop-blur-sm p-0 sm:p-4"
         data-action="click->compare#close">
      <div class="bg-slate-900 border-0 sm:border border-white/10 sm:rounded-3xl w-full h-full sm:h-auto sm:max-w-4xl sm:max-h-[90vh] overflow-auto" data-action="click->compare#stopPropagation">
        <!-- Modal Header -->
        <div class="sticky top-0 bg-slate-900 flex items-center justify-between p-4 sm:p-6 border-b border-white/10 z-10">
          <h2 class="text-xl sm:text-2xl font-bold">‚öñÔ∏è Compare</h2>
          <div class="flex items-center gap-2">
            <button type="button" data-action="click->compare#clear" class="px-3 py-2 bg-white/5 rounded-lg hover:bg-white/10 transition-colors text-gray-400 hover:text-white cursor-pointer text-sm">
              Clear
            </button>
            <button type="button" data-action="click->compare#close" class="p-2 bg-white/5 rounded-lg hover:bg-white/10 transition-colors cursor-pointer">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
        </div>

        <!-- Modal Body -->
        <div class="p-4 sm:p-6">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-8">
            <!-- Home Place -->
            <div>
              <div class="flex items-center gap-2 mb-3">
                <span class="w-8 h-8 bg-teal-500/20 rounded-lg flex items-center justify-center text-lg">üè†</span>
                <h3 class="font-semibold text-teal-400">Home Place</h3>
              </div>
              <div data-compare-target="homePlace" class="p-4 sm:p-6 bg-teal-500/5 border border-teal-500/20 rounded-2xl min-h-[200px] sm:min-h-[300px]">
                <div class="text-center py-8 sm:py-12">
                  <div class="text-4xl mb-4 opacity-50">üìç</div>
                  <p class="text-gray-500 text-sm">Select a home place to compare</p>
                </div>
              </div>
            </div>

            <!-- Match Place -->
            <div>
              <div class="flex items-center gap-2 mb-3">
                <span class="w-8 h-8 bg-amber-500/20 rounded-lg flex items-center justify-center text-lg">‚ú®</span>
                <h3 class="font-semibold text-amber-400">Match Place</h3>
              </div>
              <div data-compare-target="matchPlace" class="p-4 sm:p-6 bg-amber-500/5 border border-amber-500/20 rounded-2xl min-h-[200px] sm:min-h-[300px]">
                <div class="text-center py-8 sm:py-12">
                  <div class="text-4xl mb-4 opacity-50">üìç</div>
                  <p class="text-gray-500 text-sm">Select a match to compare</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
