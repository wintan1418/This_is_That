<nav class="fixed top-0 left-0 right-0 z-50 bg-slate-950/90 backdrop-blur-xl border-b border-teal-500/10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <%= link_to root_path, class: "flex items-center gap-2 group" do %>
        <div class="w-10 h-10 bg-gradient-to-br from-teal-400 to-amber-400 rounded-xl flex items-center justify-center shadow-lg shadow-teal-500/25 group-hover:shadow-teal-500/40 transition-all">
          <span class="text-xl">üè†</span>
        </div>
        <span class="text-xl font-bold gradient-text">
          This Is That
        </span>
      <% end %>

      <!-- Desktop Nav -->
      <div class="hidden md:flex items-center gap-6">
        <%= link_to "Find Match", search_path, class: "text-gray-300 hover:text-teal-300 transition-colors font-medium" %>
        <%= link_to "Explore", explore_path, class: "text-gray-300 hover:text-teal-300 transition-colors font-medium" %>
        <%= link_to "About", about_path, class: "text-gray-300 hover:text-teal-300 transition-colors font-medium" %>
      </div>

      <!-- Right Side Actions -->
      <div class="flex items-center gap-3">
        <% if user_signed_in? %>
          <!-- Notifications Bell -->
          <% unread_count = current_user.notifications.unread.count %>
          <%= link_to notifications_path, class: "relative p-2 rounded-lg bg-white/5 border border-white/10 hover:border-teal-500/30 text-gray-400 hover:text-white transition-all", title: "Notifications" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
            </svg>
            <% if unread_count > 0 %>
              <span class="absolute -top-1 -right-1 w-5 h-5 bg-red-500 text-white text-xs rounded-full flex items-center justify-center font-medium">
                <%= unread_count > 9 ? '9+' : unread_count %>
              </span>
            <% end %>
          <% end %>
          
          <!-- Favorites Quick Link -->
          <%= link_to favorites_path, class: "p-2 rounded-lg bg-white/5 border border-white/10 hover:border-yellow-500/30 text-gray-400 hover:text-yellow-400 transition-all", title: "Favorites" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
          <% end %>
          
          <!-- Settings -->
          <%= link_to settings_path, class: "p-2 rounded-lg bg-white/5 border border-white/10 hover:border-teal-500/30 text-gray-400 hover:text-white transition-all", title: "Settings" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          <% end %>
          
          <!-- Profile -->
          <%= link_to dashboard_path, class: "flex items-center gap-2 text-gray-300 hover:text-white transition-colors" do %>
            <div class="w-9 h-9 rounded-full bg-gradient-to-br from-teal-400 to-amber-400 flex items-center justify-center text-slate-900 font-semibold shadow-md">
              <%= current_user.name&.first&.upcase || current_user.email.first.upcase %>
            </div>
            <span class="hidden sm:inline font-medium"><%= current_user.name || "Dashboard" %></span>
          <% end %>
          
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "px-4 py-2 text-sm text-gray-400 hover:text-white transition-colors" %>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "text-gray-300 hover:text-teal-300 transition-colors font-medium" %>
          <%= link_to "Get Started", new_user_registration_path, class: "px-5 py-2.5 bg-gradient-to-r from-teal-500 to-amber-500 rounded-xl font-semibold text-slate-900 hover:opacity-90 transition-opacity shadow-lg shadow-teal-500/25" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
