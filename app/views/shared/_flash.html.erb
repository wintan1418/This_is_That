<% if notice.present? %>
  <div class="fixed top-20 right-4 z-50 transition-all duration-300" 
       data-controller="flash" 
       data-flash-timeout-value="5000"
       style="opacity: 1; transform: translateX(0);">
    <div class="px-6 py-3 bg-green-500/20 border border-green-500/30 rounded-xl backdrop-blur-xl text-green-300 flex items-center gap-3 shadow-lg">
      <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
      <span class="flex-1"><%= notice %></span>
      <button data-action="click->flash#close" class="text-green-300 hover:text-green-100 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </div>
<% end %>

