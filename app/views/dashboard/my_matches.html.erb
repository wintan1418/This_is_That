<div class="max-w-6xl mx-auto px-4 py-12">
  <h1 class="text-4xl font-bold mb-2">✨ My Matches</h1>
  <p class="text-gray-400 mb-10">Places you discovered in new cities</p>

  <% if @matched_places.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @matched_places.each do |place| %>
        <%= render "places/card", place: place %>
      <% end %>
    </div>
  <% else %>
    <div class="p-12 bg-white/5 border border-white/10 rounded-3xl text-center">
      <div class="text-6xl mb-4">✨</div>
      <h2 class="text-2xl font-semibold mb-2">No matches saved yet</h2>
      <p class="text-gray-400 mb-6">Start searching for places in your new city!</p>
      <%= link_to "Find Matches", search_path, class: "inline-flex px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-500 rounded-xl font-semibold hover:opacity-90 transition-opacity" %>
    </div>
  <% end %>
</div>
