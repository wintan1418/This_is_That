<div class="max-w-3xl mx-auto px-4 py-12">
  <!-- Back Link -->
  <a href="#" onclick="history.back(); return false;" class="text-gray-400 hover:text-white mb-6 inline-block transition-colors">‚Üê Back</a>
  
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-4xl font-bold mb-2">üîî Notifications</h1>
      <p class="text-gray-400">Stay updated with your activity</p>
    </div>
    
    <% if @notifications.unread.any? %>
      <%= button_to "Mark All Read", mark_all_as_read_notifications_path, 
          method: :post,
          class: "px-4 py-2 bg-white/5 border border-white/10 rounded-xl hover:bg-white/10 transition-colors text-gray-400 hover:text-white" %>
    <% end %>
  </div>

  <% if @notifications.any? %>
    <div class="space-y-3">
      <% @notifications.each do |notification| %>
        <div class="p-4 bg-white/5 border border-white/10 rounded-xl flex items-start gap-4 <%= 'opacity-60' if notification.read %>">
          <div class="text-2xl"><%= notification.icon %></div>
          <div class="flex-1">
            <div class="flex items-center gap-2 mb-1">
              <h3 class="font-semibold <%= notification.read ? 'text-gray-400' : 'text-white' %>"><%= notification.title %></h3>
              <% unless notification.read %>
                <span class="w-2 h-2 bg-teal-500 rounded-full"></span>
              <% end %>
            </div>
            <% if notification.message %>
              <p class="text-sm text-gray-400"><%= notification.message %></p>
            <% end %>
            <p class="text-xs text-gray-500 mt-2"><%= time_ago_in_words(notification.created_at) %> ago</p>
          </div>
          
          <% unless notification.read %>
            <%= button_to mark_as_read_notification_path(notification), 
                method: :post,
                class: "p-2 hover:bg-white/10 rounded-lg transition-colors text-gray-400 hover:text-teal-400",
                title: "Mark as read" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="p-12 bg-white/5 border border-white/10 rounded-3xl text-center">
      <div class="text-6xl mb-4">üîî</div>
      <h2 class="text-2xl font-semibold mb-2">No notifications yet</h2>
      <p class="text-gray-400">When something happens, you'll see it here!</p>
    </div>
  <% end %>
</div>
