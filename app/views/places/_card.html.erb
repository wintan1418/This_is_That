<%= link_to place_path(place), class: "block p-4 theme-card rounded-xl hover:border-teal-500/30 transition-all group" do %>
  <div class="flex gap-4">
    <% if place.image_url.present? %>
      <img src="<%= place.image_url %>" alt="<%= place.name %>" class="w-16 h-16 rounded-lg object-cover flex-shrink-0 shadow-md">
    <% else %>
      <div class="w-16 h-16 rounded-lg bg-gradient-to-br from-teal-500/20 to-amber-500/20 flex items-center justify-center flex-shrink-0">
        <span class="text-xl"><%= place.category&.icon || "üìç" %></span>
      </div>
    <% end %>
    
    <div class="flex-1 min-w-0">
      <h3 class="font-semibold truncate group-hover:text-teal-500 transition-colors text-theme-primary"><%= place.name %></h3>
      <p class="text-sm text-theme-muted truncate"><%= place.city %></p>
      <div class="flex items-center gap-2 mt-1 text-sm">
        <% if place.rating %>
          <span class="text-yellow-500">‚òÖ <%= place.rating %></span>
        <% end %>
        <% if place.category %>
          <span class="text-theme-muted"><%= place.category.name %></span>
        <% end %>
        <% if place.respond_to?(:is_favorite) && place.is_favorite %>
          <span class="text-yellow-500">‚≠ê</span>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
