<%= link_to place_path(place), class: "block bg-white/5 border border-white/10 rounded-2xl overflow-hidden hover:border-teal-500/30 hover:bg-white/[0.07] transition-all group" do %>
  <!-- Image -->
  <% if place.image_url.present? %>
    <div class="relative h-40 overflow-hidden">
      <img src="<%= place.image_url %>" alt="<%= place.name %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
      <% if place.respond_to?(:is_favorite) && place.is_favorite %>
        <span class="absolute top-3 right-3 w-8 h-8 bg-black/50 backdrop-blur-sm rounded-full flex items-center justify-center text-yellow-400 text-sm">‚≠ê</span>
      <% end %>
    </div>
  <% else %>
    <div class="relative h-40 bg-gradient-to-br from-teal-500/20 to-amber-500/20 flex items-center justify-center">
      <span class="text-4xl"><%= place.category&.icon || "üìç" %></span>
      <% if place.respond_to?(:is_favorite) && place.is_favorite %>
        <span class="absolute top-3 right-3 w-8 h-8 bg-black/50 backdrop-blur-sm rounded-full flex items-center justify-center text-yellow-400 text-sm">‚≠ê</span>
      <% end %>
    </div>
  <% end %>

  <!-- Content -->
  <div class="p-4">
    <h3 class="font-semibold text-base truncate group-hover:text-teal-400 transition-colors mb-1"><%= place.name %></h3>
    <p class="text-sm text-gray-400 truncate mb-3"><%= place.city %></p>

    <div class="flex items-center gap-2 flex-wrap">
      <% if place.rating %>
        <span class="inline-flex items-center gap-1 px-2 py-1 bg-yellow-500/10 text-yellow-400 text-xs font-medium rounded-lg">‚òÖ <%= place.rating %></span>
      <% end %>
      <% if place.category %>
        <span class="inline-flex items-center gap-1 px-2 py-1 bg-white/5 text-gray-400 text-xs font-medium rounded-lg"><%= place.category.icon %> <%= place.category.name %></span>
      <% end %>
    </div>
  </div>
<% end %>
