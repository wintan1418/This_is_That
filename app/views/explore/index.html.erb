<div class="max-w-6xl mx-auto px-4 py-12">
  <h1 class="text-4xl font-bold mb-2">üåç Explore</h1>
  <p class="text-gray-400 mb-10">Discover places shared by the community</p>

  <% if @places.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @places.each do |place| %>
        <div class="group p-5 bg-slate-900/50 border border-white/10 rounded-2xl hover:border-teal-500/30 transition-all">
          <!-- Image -->
          <% if place.image_url.present? %>
            <%= link_to place_path(place) do %>
              <img src="<%= place.image_url %>" alt="<%= place.name %>" class="w-full h-40 rounded-xl object-cover mb-4 group-hover:opacity-90 transition-opacity">
            <% end %>
          <% else %>
            <%= link_to place_path(place), class: "block w-full h-40 rounded-xl bg-gradient-to-br from-teal-500/20 to-amber-500/20 flex items-center justify-center mb-4" do %>
              <span class="text-4xl">üìç</span>
            <% end %>
          <% end %>

          <!-- Info -->
          <div>
            <%= link_to place_path(place), class: "block" do %>
              <h3 class="font-semibold text-lg truncate hover:text-teal-300 transition-colors"><%= place.name %></h3>
            <% end %>
            <p class="text-sm text-gray-400 truncate"><%= place.city %></p>
            
            <div class="flex items-center justify-between mt-3">
              <div class="flex items-center gap-2 text-sm">
                <% if place.rating %>
                  <span class="text-yellow-400">‚òÖ <%= place.rating %></span>
                <% end %>
                <% if place.category %>
                  <span class="text-gray-500"><%= place.category.icon %></span>
                <% end %>
              </div>
              
              <!-- User who saved -->
              <div class="flex items-center gap-2 text-sm text-gray-500">
                <div class="w-6 h-6 rounded-full bg-gradient-to-br from-teal-400 to-amber-400 flex items-center justify-center text-slate-900 text-xs font-semibold">
                  <%= place.user.name&.first&.upcase || place.user.email.first.upcase %>
                </div>
                <span><%= place.user.name || place.user.email.split('@').first %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="p-12 bg-white/5 border border-white/10 rounded-3xl text-center">
      <div class="text-6xl mb-4">üåç</div>
      <h2 class="text-2xl font-semibold mb-2">No places to explore yet</h2>
      <p class="text-gray-400 mb-6">Be the first to share your discoveries!</p>
      <% if user_signed_in? %>
        <%= link_to "Save a Match", search_path, class: "inline-flex px-6 py-3 bg-gradient-to-r from-teal-500 to-amber-500 rounded-xl font-semibold text-slate-900 hover:opacity-90 transition-opacity" %>
      <% end %>
    </div>
  <% end %>
</div>
