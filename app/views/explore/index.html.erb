<div class="max-w-6xl mx-auto px-4 py-8 sm:py-12">
  <h1 class="text-2xl sm:text-4xl font-bold mb-2">üåç Explore</h1>
  <p class="text-gray-400 mb-8 sm:mb-10">Discover places shared by the community</p>

  <% if @places.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
      <% @places.each do |place| %>
        <div class="group bg-slate-900/50 border border-white/10 rounded-2xl overflow-hidden hover:border-teal-500/30 transition-all">
          <!-- Image -->
          <%= link_to place_path(place), class: "block" do %>
            <% if place.image_url.present? %>
              <div class="relative h-44 sm:h-48 overflow-hidden">
                <img src="<%= place.image_url %>" alt="<%= place.name %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                <div class="absolute inset-0 bg-gradient-to-t from-slate-900/60 to-transparent"></div>
              </div>
            <% else %>
              <div class="h-44 sm:h-48 bg-gradient-to-br from-teal-500/20 to-amber-500/20 flex items-center justify-center">
                <span class="text-5xl">üìç</span>
              </div>
            <% end %>
          <% end %>

          <!-- Info -->
          <div class="p-4">
            <%= link_to place_path(place), class: "block" do %>
              <h3 class="font-semibold text-base sm:text-lg truncate hover:text-teal-300 transition-colors"><%= place.name %></h3>
            <% end %>
            <p class="text-sm text-gray-400 truncate mb-3"><%= place.city %></p>

            <div class="flex items-center justify-between">
              <div class="flex items-center gap-2">
                <% if place.rating %>
                  <span class="inline-flex items-center gap-1 px-2 py-1 bg-yellow-500/10 text-yellow-400 text-xs font-medium rounded-lg">‚òÖ <%= place.rating %></span>
                <% end %>
                <% if place.category %>
                  <span class="text-gray-500 text-sm"><%= place.category.icon %></span>
                <% end %>
              </div>

              <!-- User who saved -->
              <div class="flex items-center gap-2 text-sm text-gray-500">
                <div class="w-6 h-6 rounded-full bg-gradient-to-br from-teal-400 to-amber-400 flex items-center justify-center text-slate-900 text-[10px] font-semibold flex-shrink-0">
                  <%= place.user.name&.first&.upcase || place.user.email.first.upcase %>
                </div>
                <span class="truncate max-w-[80px]"><%= place.user.name || place.user.email.split('@').first %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="p-12 bg-white/5 border border-white/10 rounded-3xl text-center">
      <div class="text-6xl mb-4">üåç</div>
      <h2 class="text-2xl font-semibold mb-2">No places to explore yet</h2>
      <p class="text-gray-400 mb-6">Be the first to share your discoveries!</p>
      <% if user_signed_in? %>
        <%= link_to "Save a Match", search_path, class: "inline-flex px-6 py-3 bg-gradient-to-r from-teal-500 to-amber-500 rounded-xl font-semibold text-slate-900 hover:opacity-90 transition-opacity" %>
      <% end %>
    </div>
  <% end %>
</div>
